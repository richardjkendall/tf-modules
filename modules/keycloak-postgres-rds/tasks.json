[
  {
    "name": "keycloak",
    "image": "${image}",
    "cpu": ${cpu},
    "memory": ${memory},
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 0,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
          "awslogs-group": "/ecs/${cluster}/${service}",
          "awslogs-region": "${region}",
          "awslogs-stream-prefix": "keycloak"
      }
    },
    "secrets": [
      {
        "name": "KEYCLOAK_PASSWORD",
        "valueFrom": "${admin_passwd}"
      },
      {
        "name": "DB_PASSWORD",
        "valueFrom": "${db_passwd}"
      }
    ],
    "environment": [
      {
        "name": "KEYCLOAK_USER",
        "value": "admin"
      },
      {
        "name": "DB_ADDR",
        "value": "${db_host}"
      },
      {
        "name": "DB_USER",
        "value": "keycloak"
      },
      {
        "name": "PROXY_ADDRESS_FORWARDING",
        "value": "true"
      },
      {
        "name": "DB_VENDOR",
        "value": "postgres"
      }
    ]
  }
]
